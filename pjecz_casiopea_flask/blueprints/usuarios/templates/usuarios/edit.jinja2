{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Usuario {{ usuario.email }}{% endblock %}

{% block custom_head %}
    <!-- Select2 bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">
{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar Usuario ' + usuario.email) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'usuario_id': usuario.id} %}
        {% call f.form_tag('usuarios.edit', fid='usuario_form', **form_kwargs) %}
            <div class="row">
                <div class="col-md-6">
                    {% call f.form_group(form.email) %}{% endcall %}
                    {% call f.form_group(form.nombres) %}{% endcall %}
                    {% call f.form_group(form.apellido_paterno) %}{% endcall %}
                    {% call f.form_group(form.apellido_materno) %}{% endcall %}
                </div>
                <div class="col-md-6">
                    {% call f.form_group(form.distrito) %}{% endcall %}
                    {% call f.form_group(form.autoridad) %}{% endcall %}
                    {% call f.form_group(form.puesto) %}{% endcall %}
                </div>
            </div>
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <!-- Select Distrito-Autoridad -->
    <script>
        const distritoSelect = document.getElementById('distrito');
        const autoridadSelect = document.getElementById('autoridad');
        // Cargar el select distrito
        fetch('{{ url_for("distritos.select_json") }}')
            .then(response => response.json())
            .then(data => {
                data.forEach(distrito => {
                    const option = document.createElement('option');
                    option.value = distrito.id;
                    option.text = distrito.texto;
                    distritoSelect.appendChild(option);
                });
                // Seleccionar el distrito original del usuario
                distritoSelect.value = '{{ usuario.autoridad.distrito_id }}';
                distritoSelect.dispatchEvent(new Event('change'));
            });
        // Cargar el select autoridad, si el distrito cambia
        distritoSelect.addEventListener('change', () => {
            const distritoId = distritoSelect.value;
            fetch(`{{ url_for("autoridades.distrito_select_json", distrito_id="") }}${distritoId}`)
                .then(response => response.json())
                .then(data => {
                    autoridadSelect.innerHTML = '';
                    data.forEach(autoridad => {
                        const option = document.createElement('option');
                        option.value = autoridad.id;
                        option.text = autoridad.texto;
                        autoridadSelect.appendChild(option);
                    });
                    // Seleccionar la autoridad original del usuario
                    if (distritoSelect.value == '{{ usuario.autoridad.distrito_id }}') {
                        autoridadSelect.value = '{{ usuario.autoridad_id }}';
                    }
                });
        });
    </script>
{% endblock %}
