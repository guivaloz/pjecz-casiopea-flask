{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_view('AUTORIDADES') %}
            {{ topbar.button('Autoridades', url_for('autoridades.list_active'), 'mdi:scale-balance') }}
        {% endif %}
        {% if current_user.can_view('DISTRITOS') %}
            {{ topbar.button('Distritos', url_for('distritos.list_active'), 'mdi:map-marker') }}
        {% endif %}
        {% if current_user.can_admin('MATERIAS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivas', url_for('materias.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activas', url_for('materias.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('MATERIAS') %}
            {{ topbar.button_new('Nueva Materia', url_for('materias.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <!-- Filtros Materias -->
        <div class="row">
            <div class="col">
                <form class="row g-1 mb-3" id="filtradorForm" onsubmit="filtrosMaterias.buscar(); return false;">
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroMateriaClave" type="text" class="form-control" aria-label="Clave" style="text-transform: uppercase;">
                            <label for="filtroMateriaClave">Clave</label>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-floating">
                            <input id="filtroMateriaNombre" type="text" class="form-control" aria-label="Nombre" style="text-transform: uppercase;">
                            <label for="filtroMateriaNombre">Nombre</label>
                        </div>
                    </div>
                    <div class="col-6 text-end">
                        <button title="Buscar" class="btn btn-primary btn-lg" onclick="filtrosMaterias.buscar(); return false;" id="button-buscar"><span class="iconify" data-icon="mdi:magnify"></span></button>
                        <button title="Limpiar" class="btn btn-warning btn-lg" type="reset" onclick="filtrosMaterias.limpiar();" id="button-limpiar"><span class="iconify" data-icon="mdi:broom"></span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- DataTable Materias -->
        <table id="materias_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Clave</th>
                    <th>Nombre</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <!-- Datatables -->
    <script src="{{ url_for('static', filename='js/datatables-constructor.js') }}"></script>
    <script src="{{ url_for('static', filename='js/datatables-filtros.js') }}"></script>
    <script>
        // DataTable Materias
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTMaterias = constructorDataTable.config();
        configDTMaterias['ajax']['url'] = '{{ url_for("materias.datatable_json") }}';
        configDTMaterias['ajax']['data'] = {{ filtros }};
        configDTMaterias['columns'] = [
            { data: 'detalle' },
            { data: 'nombre' },
        ];
        configDTMaterias['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.clave + '</a>';
                }
            }
        ];
        // Filtros Materias
        const filtrosMaterias = new FiltrosDataTable('#materias_datatable', configDTMaterias);
        filtrosMaterias.agregarInput('filtroMateriaClave', 'clave');
        filtrosMaterias.agregarInput('filtroMateriaNombre', 'nombre');
        filtrosMaterias.precargar();
    </script>
{% endblock %}
