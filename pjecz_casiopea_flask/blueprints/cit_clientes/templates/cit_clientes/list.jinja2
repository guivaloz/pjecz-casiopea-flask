{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_view('CIT CLIENTES REGISTROS') %}
            {{ topbar.button('Registros', url_for('cit_clientes_registros.list_active'), 'mdi mdi-account-plus') }}
        {% endif %}
        {% if current_user.can_view('CIT CLIENTES RECUPERACIONES') %}
            {{ topbar.button('Recuperaciones', url_for('cit_clientes_recuperaciones.list_active'), 'mdi mdi-lock-reset') }}
        {% endif %}
        {% if current_user.can_admin('CIT CLIENTES') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('cit_clientes.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('cit_clientes.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('CIT CLIENTES') %}
            {{ topbar.button_new('Nuevo Cliente', url_for('cit_clientes.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <!-- Filtros Cit Clientes -->
        <div class="row">
            <div class="col">
                <form class="row g-1 mb-3" id="filtradorForm" onsubmit="filtrosCitClientes.buscar(); return false;">
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroEmail" type="text" class="form-control" aria-label="Correo Electrónico">
                            <label for="filtroEmail">Correo Electrónico</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroNombres" type="text" class="form-control" aria-label="Nombres" style="text-transform: uppercase;">
                            <label for="filtroNombres">Nombres</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroApellidoPrimero" type="text" class="form-control" aria-label="Primer Apellido" style="text-transform: uppercase;">
                            <label for="filtroApellidoPrimero">Primer Apellido</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-floating">
                            <input id="filtroApellidoSegundo" type="text" class="form-control" aria-label="Segundo Apellido" style="text-transform: uppercase;">
                            <label for="filtroApellidoSegundo">Segundo Apellido</label>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <button title="Buscar" class="btn btn-primary btn-lg" onclick="filtrosCitClientes.buscar(); return false;" id="button-buscar"><span class="mdi mdi-magnify"></span></button>
                        <button title="Limpiar" class="btn btn-warning btn-lg" type="reset" onclick="filtrosCitClientes.limpiar();" id="button-limpiar"><span class="mdi mdi-broom"></span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- DataTable Cit Clientes -->
        <table id="cit_clientes_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Correo electrónico</th>
                    <th>Nombres</th>
                    <th>Apellido primero</th>
                    <th>Apellido segundo</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="{{ url_for('static', filename='js/datatables-constructor.js') }}"></script>
    <script src="{{ url_for('static', filename='js/datatables-filtros.js') }}"></script>
    <script>
        // DataTable Cit Clientes
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTCitClientes = constructorDataTable.config();
        configDTCitClientes['ajax']['url'] = '{{ url_for("cit_clientes.datatable_json") }}';
        configDTCitClientes['ajax']['data'] = {{ filtros }};
        configDTCitClientes['columns'] = [
            { data: "detalle" },
            { data: "nombres" },
            { data: "apellido_primero" },
            { data: "apellido_segundo" }
        ];
        configDTCitClientes['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    if (data.email.length > 24) {
                      return '<a href="' + data.url + '">' + data.email.substring(0, 24) + '…</a>';
                    }
                    return '<a href="' + data.url + '">' + data.email + '</a>';
                }
            },
            {
                targets: [1, 2, 3], // nombres, apellido_primero, apellido_segundo
                data: null,
                render: function(data, type, row, meta) {
                    return data.length > 24 ? data.substring(0, 24) + '…' : data;
                }
            }
        ];
        // Filtros Cit Clientes
        const filtrosCitClientes = new FiltrosDataTable('#cit_clientes_datatable', configDTCitClientes);
        filtrosCitClientes.agregarInput('filtroEmail', 'email');
        filtrosCitClientes.agregarInput('filtroNombres', 'nombres');
        filtrosCitClientes.agregarInput('filtroApellidoPrimero', 'apellido_primero');
        filtrosCitClientes.agregarInput('filtroApellidoSegundo', 'apellido_segundo');
        filtrosCitClientes.precargar();
    </script>
{% endblock %}
