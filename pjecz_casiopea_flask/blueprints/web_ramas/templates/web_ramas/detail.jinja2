{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Rama {{ web_rama.clave }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Rama ' + web_rama.clave) %}
        {{ topbar.button_previous('Ramas', url_for('web_ramas.list_active')) }}
        {% if current_user.can_edit('WEB RAMAS') %}
            {{ topbar.button_edit('Editar', url_for('web_ramas.edit', web_rama_id=web_rama.id)) }}
        {% endif %}
        {% if current_user.can_admin('WEB RAMAS') %}
            {% if web_rama.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('web_ramas.delete', web_rama_id=web_rama.id)) }}{% endif %}
            {% if web_rama.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('web_ramas.recover', web_rama_id=web_rama.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=web_rama.estatus) %}
        {# detail.label_value_big('Clave', web_rama.clave) #}
        {{ detail.label_value('Descripción', web_rama.descripcion) }}
        {{ detail.label_value('Título', web_rama.titulo) }}
        {{ detail.label_value('Unidad compartida', web_rama.unidad_compartida) }}
        {{ detail.label_value('Directorio', web_rama.directorio) }}
        {{ detail.label_value_boolean('Archivado', web_rama.esta_archivado) }}
    {% endcall %}
    {% if current_user.can_view('WEB PAGINAS') %}
        {% call detail.card('Páginas') %}
            <!-- Filtros WebPaginas -->
            <div class="row">
                <div class="col">
                    <form class="row g-1 mb-3" id="filtradorForm" onsubmit="filtrosWebPaginas.buscar(); return false;">
                        <div class="col-2">
                            <div class="form-floating">
                                <input id="filtroWebPaginaClave" type="text" class="form-control" aria-label="Clave" style="text-transform: uppercase;">
                                <label for="filtroWebPaginaClave">Clave</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-floating">
                                <input id="filtroWebPaginaDescripcion" type="text" class="form-control" aria-label="Descripción">
                                <label for="filtroWebPaginaDescripcion">Descripción</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-floating">
                                <select id="filtroWebPaginaEstado" class="form-select" aria-label="Estado">
                                    <option value="">Todos</option>
                                    <option value="BORRADOR">BORRADOR</option>
                                    <option value="PUBLICAR">PUBLICAR</option>
                                </select>
                                <label for="filtroWebPaginaEstado">Estado</label>
                            </div>
                        </div>
                        <div class="col-2 text-end">
                            <button title="Buscar" class="btn btn-primary btn-lg" onclick="filtrosWebPaginas.buscar(); return false;" id="button-buscar"><span class="mdi mdi-magnify"></span></button>
                            <button title="Limpiar" class="btn btn-warning btn-lg" type="reset" onclick="filtrosWebPaginas.limpiar();" id="button-limpiar"><span class="mdi mdi-broom"></span></button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- DataTable WebPaginas -->
            <table id="web_paginas_datatable" class="table display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Clave</th>
                        <th>Descripción</th>
                        <th>Título</th>
                        <th>Estado</th>
                        <th>Arch.</th>
                        <th>Cont.</th>
                    </tr>
                </thead>
            </table>
            {% if current_user.can_insert('WEB PAGINAS') %}
                <a href="{{ url_for('web_paginas.new', web_rama_id=web_rama.id) }}" class="btn btn-primary">Agregar página</a>
            {% endif %}
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_admin('WEB RAMAS') %}
        {% if web_rama.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + web_rama.clave + '?') }}{% endif %}
        {% if web_rama.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + web_rama.clave + '?') }}{% endif %}
    {% endif %}
    <script src="{{ url_for('static', filename='js/datatables-constructor.js') }}"></script>
    <script src="{{ url_for('static', filename='js/datatables-filtros.js') }}"></script>
    {% if current_user.can_view('WEB PAGINAS') %}
        <script>
            // DataTable WebPaginas
            const constructorDataTable = new ConfigDataTable('{{ csrf_token() }}');
            let configDTWebPaginas = constructorDataTable.config();
            configDTWebPaginas['ajax']['url'] = '{{ url_for("web_paginas.datatable_json") }}';
            configDTWebPaginas['ajax']['data'] = { estatus: "A", web_rama_id: '{{ web_rama.id }}' };
            configDTWebPaginas['columns'] = [
                { data: 'detalle' },
                { data: 'descripcion' },
                { data: 'titulo' },
                { data: 'estado' },
                { data: 'esta_archivado' },
                { data: 'edit_ckeditor5_url' }
            ];
            configDTWebPaginas['columnDefs'] = [
                {
                    targets: 0, // detalle
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.clave + '</a>';
                    }
                },
                {
                    targets: [1, 2], // descripcion, título
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data.length > 24) {
                            return '<span title="' + data + '">' + data.substring(0, 48) + '…</span>';
                        }
                        return data;
                    }
                },
                {
                    targets: 4, // esta_archivado
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data) {
                            return '<span class="mdi mdi-checkbox-marked" style="font-size: 1.4em"></span>';
                        }
                        return '<span class="iconify text-secondary" data-icon="mdi mdi-checkbox-blank-outline" style="font-size: 1.4em"></span>';
                    }
                },
                {
                    targets: 5, // edit_ckeditor5_url
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data) {
                            return '<a href="' + data + '">' +
                                '<span class="mdi mdi-text-box-edit" style="font-size: 1.4em"></span>' +
                                '</a>';
                        }
                        return '';
                    }
                }
            ];
            // Filtros WebPaginas
            const filtrosWebPaginas = new FiltrosDataTable('#web_paginas_datatable', configDTWebPaginas);
            filtrosWebPaginas.agregarInput('filtroWebPaginaClave', 'clave');
            filtrosWebPaginas.agregarInput('filtroWebPaginaDescripcion', 'descripcion');
            filtrosWebPaginas.agregarSelect('filtroWebPaginaEstado', 'estado');
            filtrosWebPaginas.precargar();
        </script>
    {% endif %}
{% endblock %}
