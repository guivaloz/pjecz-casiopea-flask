{# Card #}
{%- macro card(title='', estatus='', border_class='') -%}
    {% if estatus == 'B' %}<div class="card text-white bg-dark mb-2">{% else %}<div class="card mb-3 {{ border_class }}">{% endif %}
        {% if title %}<div class="card-header">
            {{ title }}
        </div>{% endif %}
        <div class="card-body">
            {{ caller () }}
        </div>
    </div>
{%- endmacro -%}

{# Label Value #}
{%- macro label_value(label, value, link='') -%}
    {% if value != None and value != '' %}
        <div class="row">
            <div class="col-md-3 text-end">
                {{ label }}
            </div>
            <div class="col-md-9">
                {% if link %}
                <strong><a href="{{ link }}">{{ value }}</a></strong>
                {% else %}
                <strong>{{ value }}</strong>
                {% endif %}
            </div>
        </div>
    {% endif %}
{%- endmacro -%}

{# Label Value #}
{%- macro label_value_big(label, value, link='', font_size=2) -%}
    {% if value != None and value != '' %}
        <div class="row">
            <div class="col-md-3 text-end"><span style="font-size:{{font_size}}em">
                {{ label }}
            </span></div>
            <div class="col-md-9"><span style="font-size:{{font_size}}em">
                {% if link %}
                <strong><a href="{{ link }}">{{ value }}</a></strong>
                {% else %}
                <strong>{{ value }}</strong>
                {% endif %}
            </span></div>
        </div>
    {% endif %}
{%- endmacro -%}

{# Label Value Boolean #}
