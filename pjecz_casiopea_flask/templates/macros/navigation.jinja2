{# Dashboard navigation #}

{%- macro menu() -%}
    <div class="offcanvas-body d-md-flex flex-column p-0 pt-lg-3 overflow-y-auto">
        <ul class="nav flex-column">
            {{ caller() }}
        </ul>
        <hr class="my-3">
        <ul class="nav flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2" href="{{ url_for('usuarios.profile') }}">
                    Perfil
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center gap-2" href="{{ url_for('usuarios.logout') }}">
                    Salir
                </a>
            </li>
        </ul>
    </div>
{%- endmacro -%}

{%- macro menu_option(label, url, icon) -%}
    <li class="nav-item">
        <a class="nav-link d-flex align-items-center gap-2" href="{{ url }}">
            <span class="{{ icon }}"></span> {{ label }}
        </a>
    </li>
{%- endmacro -%}
